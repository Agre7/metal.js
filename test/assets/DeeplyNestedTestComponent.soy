{namespace Templates.DeeplyNestedTestComponent}

/**
 */
{template .render}
	{call .components data="all" /}
{/template}

/**
 * @param bar
 * @param footerButtons
 * @param id
 */
{template .components}
	{let $child2 kind="html"}
		{call Templates.ChildrenTestComponent.render}
			{param bar: $bar /}
			{param children kind="html"}
				{call Templates.NestedTestComponent.render}
					{param count: 1 /}
					{param id: $id + '-child1' /}
				{/call}
			{/param}
			{param id: $id + '-child2' /}
		{/call}
	{/let}
	{let $child3 kind="html"}
		{call Templates.EventsTestComponent.render}
			{param footerButtons: $footerButtons /}
			{param id: $id + '-child3' /}
		{/call}
	{/let}

	{call Templates.ChildrenTestComponent.render}
		{param bar: $bar /}
		{param children kind="html"}
			<button type="button" class="parentButton" data-onclick="{$id}:handleClick"></button>
			{$child2}{$child3}
		{/param}
		{param id: $id + '-main' /}
	{/call}
{/template}
