{namespace Templates.NestedSurfacesTestComponent}

/**
 * @param id
 */
{template .content}
	{delcall NestedSurfacesTestComponent.list data="all" /}
{/template}

/**
 * @param id
 * @param items
 */
{template .list}
	<div class="title">
		{delcall NestedSurfacesTestComponent.item}
			{param id: $id /}
			{param surfaceId: 'title' /}
			{param text: 'My List' /}
		{/delcall}
	</div>
	{delcall NestedSurfacesTestComponent.item}
		{param id: $id /}
		{param surfaceId: 0 /}
		{param text: '0' /}
	{/delcall}
	<div class="items">
	{foreach $item in $items}
			{delcall NestedSurfacesTestComponent.item}
				{param id: $id /}
				{param text: $item /}
			{/delcall}
		{/foreach}
	</div>
{/template}

/**
 * @param text
 */
{template .item}
	{$text}
{/template}
